RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

#RewriteRule ^api/(.*?)$ api/api.php?method=$1 [L,QSA]
RewriteRule ^api/?([a-zA-Z_]+)?/?$ api/api.php?method=$1 [L,QSA]
RewriteRule ^api/([a-zA-Z0-9_]+)/?([a-zA-Z_]+)?/?$ api/api.php?class=$1&method=$2 [L,QSA]
#RewriteRule ^api/([a-zA-Z0-9]+)/?([a-zA-Z]+)?/?(.*?)?$ index.php?class=$1&method=$2&args[]=$3 [L,QSA]
RewriteRule ^/?([a-zA-Z-0-9\-_]+)/?$ home.php?r=$1 [L,QSA]
